{
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": false,
  "printWidth": 80,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "arrowParens": "avoid",
  "eslintIntegration": true,
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 120,
        "singleQuote": false
      }
    }
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrder": ["^@server/(.*)$", "^@core/(.*)$", "^@ui/(.*)$", "^[./]"]
}
